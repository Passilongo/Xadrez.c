#include <stdio.h>


int main(){

int bispo = 1, rainha = 1;

// Movimentação do Bispo
printf("Movimentação do Bispo\n");
do { 
    printf("Cima, Direita\n", bispo);
    bispo++;
} while (bispo <= 5);

//Movimentação Rainha
printf("Movimentação da Rainha\n");
while (rainha <= 8)
{
    printf("Esquerda\n");
    rainha++;
}

//Movimentação da Torre
printf("Movimentação da Torre\n");
for (int i = 1; i <= 5 ; i++)
{
    printf("Direita\n");
}







return 0;

}
